@model System.Collections.Generic.IList<BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Chat.MessageViewModel>

<div class="row col-md-6">
    <div class="form-horizontal">
        @for (int i = 0; i < @Model.Count; ++i)
        {
            Html.RenderPartial("~/Views/Chat/_Message.cshtml", @Model[i]);
        }
        <div class="form-group">
            <div id="current-message" class="media">
                <a class="pull-left">
                    <img class="media-object" src="~/Content/images/profile_pages/no_preview_sm.png" />
                </a>
                <div class="media-body">
                    <h4 class="media-heading">You</h4>
                    <textarea id="current-message-text" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="">
                <button id="send-button" class="btn btn-info" type="submit"><i class="fa fa-chevron-right fa-fw"></i> Send</button>
            </div>
        </div>
    </div>
</div>