@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Album

@model AlbumCreateViewModel
           
<div class="modal fade" id="create-album-modal" tabindex="-1" role="dialog" aria-labelledby="create-album-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="create-album-modal-header">Create Album</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        @using (this.Html.BeginForm("CreateAlbum", "Album", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    @(this.Html.ValidationSummary(true))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputName">Name</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Name))</p>
                                    @(this.Html.TextBoxFor(p => p.Name, new { placeholder = "Name", @class = "form-control", id = "inputName" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputDescription">Description</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Description))</p>
                                    @(this.Html.TextAreaFor(p => p.Description, new { placeholder = "Description", @class = "form-control", id = "inputDescription" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-cog fa-fw"></i> Create</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
