@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Album;

@model System.Collections.Generic.IList<AlbumHeaderViewModel>
           
<li class="active">
    <a href="#">Albums</a>
    <ul class="nav">
        @for (int i = 0; i < Model.Count; ++i)
        {
            <li class="">
                <a href="@Url.Action("Index", "Image", new { key = @ViewBag.Key, albumKey = @Model[i].Key })">
                    <span class="badge pull-right">@Model[i].ImageNumber</span>
                    @Model[i].Name
                </a>
            </li>
        }
    </ul>
</li>
