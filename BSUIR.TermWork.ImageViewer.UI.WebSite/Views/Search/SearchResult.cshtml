
@model IList<BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Search.SearchResultViewModel>
@{
    this.ViewBag.Title = "Search Result";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row navbar-margin">
    <div class="col-lg-12">
        <h1>Search result:</h1>
        @if (this.Model.Count == 0)
        {
            <h2>No results has been found.</h2>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="table-header" width="10%">#</th>
                            <th class="table-header" width="10%">Type</th>
                            <th class="table-header" width="40%">Name</th>
                            <th class="table-header" width="30%">Owner Name</th>
                            <th class="table-header" width="10%">Creation Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < this.Model.Count; ++i)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@(this.Model[i].Type)</td>
                                <td><a href="@(this.Model[i].Reference)">@(this.Model[i].Name)</a></td>
                                <td>@(this.Model[i].OwnerName)</td>
                                <td>@(this.Model[i].CreationDate.ToShortDateString())</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        
    </div>
</div>