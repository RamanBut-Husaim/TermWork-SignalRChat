@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Comment

@model CommentCreateViewModel
           
<div class="modal fade" id="create-comment-modal" tabindex="-1" role="dialog" aria-labelledby="create-comment-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="create-comment-modal-header">Create Comment</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        @using (this.Html.BeginForm("CreateComment", "Comment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    @(this.Html.ValidationSummary(true))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputContent">Content</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Content))</p>
                                    @(this.Html.TextAreaFor(p => p.Content, new { placeholder = "Content", @class = "form-control", id = "inputContent" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-cog fa-fw"></i> Create</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
