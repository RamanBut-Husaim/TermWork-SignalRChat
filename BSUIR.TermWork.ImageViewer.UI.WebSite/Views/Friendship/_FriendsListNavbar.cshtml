@using BSUIR.TermWork.ImageViewer.UI.WebSite.Helpers
@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Friendship

@model System.Collections.Generic.IList<FriendViewModel>

<li id="friends-navbar-list" class="active">
    <a href="#">Friends</a>
    <ul class="nav">
    @for (int i = 0; i < Model.Count; ++i)
    {
        <li class="">
            @Html.AjaxLinkModalWindow(@Model[i].FirstName + " " + @Model[i].LastName, Url.Action("DualChatRoom", "Chat", new { friendKey = @Model[i].Key }), "dual-chat-room-modal", "user-account-control", "", "fa fa-cogs pull-right", "")
        </li>
    }
    </ul>
</li>