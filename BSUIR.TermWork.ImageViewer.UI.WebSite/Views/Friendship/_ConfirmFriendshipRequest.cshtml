@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Friendship

@model FriendshipAnswerViewModel

<div class="modal fade" id="confirm-request-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-request-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="confirm-request-modal-header">Confirm Request</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        @using (this.Html.BeginForm("ConfirmRequest", "Friendship", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.HiddenFor(p => p.SenderKey)
                            @Html.HiddenFor(p => p.ReceiverKey)
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <p>Do you really want to make friends with this person?</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <button class="btn btn-success" type="submit"><i class="fa fa-crosshairs fa-fw"></i> Accept</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

