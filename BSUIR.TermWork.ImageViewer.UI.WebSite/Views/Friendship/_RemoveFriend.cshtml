@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Friendship

@model FriendRequestCreateViewModel

<div class="modal fade" id="remove-friend-modal" tabindex="-1" role="dialog" aria-labelledby="remove-friend-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="remove-friend-modal-header">Remove friend</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        @using (this.Html.BeginForm("RemoveFriend", "Friendship", new { key = Model.Key }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.HiddenFor(p => p.Key)
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <p>Do you really want to break friendship?</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <button class="btn btn-danger" type="submit"><i class="fa fa-arrows-alt"></i> Break</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

