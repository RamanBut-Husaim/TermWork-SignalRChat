@using BSUIR.TermWork.ImageViewer.UI.Infrastructure

<div class="modal fade" id="error-modal" tabindex="-1" role="dialog" aria-labelledby="error-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="edit-album-modal-header">Error</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        <div class="validation-summary-errors">
                            @if (TempData[Constants.TempDataSuccess] != null)
                            {
                                @TempData[Constants.TempDataSuccess]
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
