@using BSUIR.TermWork.ImageViewer.Resources;
@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Account;
@model AccountRegisterViewModel


<div class="modal fade" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="register-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="register-modal-header">@Resources.Account_Register</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        @using (this.Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    @(this.Html.ValidationSummary(true))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputEmail">@Resources.Account_Email</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Email))</p>
                                    @(this.Html.TextBoxFor(p => p.Email, new { placeholder = Resources.Account_Email, @class = "form-control", id = "inputEmail" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputFirstName">@Resources.Account_FirstName</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.FirstName))</p>
                                    @(this.Html.TextBoxFor(p => p.FirstName, new { placeholder = Resources.Account_FirstName, @class = "form-control", id = "inputFirstName" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputLastName">@Resources.Account_LastName</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.LastName))</p>
                                    @(this.Html.TextBoxFor(p => p.LastName, new { placeholder = Resources.Account_LastName, @class = "form-control", id = "inputLastName" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputPassword">@Resources.Account_Password</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Password))</p>
                                    @(this.Html.PasswordFor(p => p.Password, new { placeholder = Resources.Account_Password, @class = "form-control", id = "inputPassword" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputPasswordConfirmation">@Resources.Account_ConfirmPassword</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.PasswordConfirmation))</p>
                                    @(this.Html.PasswordFor(p => p.PasswordConfirmation, new { placeholder = Resources.Account_ConfirmPassword, @class = "form-control", id = "inputPasswordConfirmation" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-user fa-fw"></i> @Resources.Account_Register</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
