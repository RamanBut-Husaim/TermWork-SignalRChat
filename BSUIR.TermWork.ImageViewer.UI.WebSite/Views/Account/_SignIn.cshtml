@using BSUIR.TermWork.ImageViewer.Resources;
@using BSUIR.TermWork.ImageViewer.UI.WebSite.ViewModel.Account;
@model AccountSignInViewModel
           

<div class="modal fade" id="sign-in-modal" tabindex="-1" role="dialog" aria-labelledby="sign-in-modal-header" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="sign-in-modal-header">@Resources.Account_SignIn</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row col-md-8">
                        @using (this.Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    @(this.Html.ValidationSummary(true))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputEmail">@Resources.Account_Email</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Email))</p>
                                    @(this.Html.TextBoxFor(p => p.Email, new { placeholder = Resources.Account_Email, @class = "form-control", id = "inputEmail" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <label for="inputPassword">@Resources.Account_Password</label>
                                    <p>@(this.Html.ValidationMessageFor(p => p.Password))</p>
                                    @(this.Html.PasswordFor(p => p.Password, new { placeholder = Resources.Account_Password, @class = "form-control", id = "inputPassword" }))
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-sign-in fa-fw"></i> @Resources.Account_SignIn</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>